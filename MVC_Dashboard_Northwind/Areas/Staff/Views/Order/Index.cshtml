@model MVC_Dashboard_Northwind.Models.Order
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card-body">
    <a class="btn btn-info float-end ms-3" href="/order/addorder">Add Order</a>

</div>
<div class="card-body">
    <table id="datatablesSimple">
        <thead>
            <tr>
                <th>OrderID</th>
                <th>CustomerID</th>
                <th>EmployeeID</th>
               
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var order in ViewBag.Orders)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.CustomerID</td>
                    <td>@order.EmployeeID</td>
                    
                    


                    <td>@Html.ActionLink("Guncelle", "UpdateOrder", new { id = order.OrderID }, new { @class = "btn btn-warning" })</td>
                    <td>@Html.ActionLink("Sil", "Delete", new { id = order.OrderID }, new { @class = "btn btn-danger" })</td>

                </tr>
            }
        </tbody>

    </table>
</div>



